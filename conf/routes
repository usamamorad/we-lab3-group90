# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Authentication.index()

GET         /register            controllers.Registration.register()
POST        /register            controllers.Registration.registerUser()

GET         /login               controllers.Authentication.login()
GET         /logout              controllers.Authentication.logout()
GET         /authenticate        controllers.Authentication.authenticateUser()
POST        /authenticate        controllers.Authentication.authenticateUser()

GET         /jeopardy            controllers.Application.jeopardy()
POST        /question            controllers.Application.question()

POST         /jeopardy            controllers.Jeopardy.newGame()

#GET     /quiz/question  controllers.Jeopardy.question()
#GET     /quiz/round     controllers.Jeopardy.roundResult()
#POST    /quiz/round     controllers.Jeopardy.newRound()

#GET     /quiz/result    controllers.Jeopardy.endResult()
#POST    /quiz/answer    controllers.Jeopardy.addAnswer()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)
